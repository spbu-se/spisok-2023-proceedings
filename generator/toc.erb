\documentclass[10pt,a5paper,twoside]{article}

\usepackage{mathspec}
\usepackage{fontspec}
\usepackage{xecyr}

\defaultfontfeatures{Mapping=tex-text,Ligatures={TeX},Kerning=On}

\def\MyRomanFont#1{\expandafter#1{Tempora}[
  Mapping=tex-text,
  Extension=.otf,
  UprightFont=*-Regular,
  ItalicFont=*-Italic,
  BoldFont=*-Bold,
  BoldItalicFont=*-BoldItalic,
]}
\def\MyMonoFont#1{\expandafter#1[]{Courier New}}
\def\MySerifFont#1{\expandafter#1{CMUSansSerif}[
  Mapping=tex-text,
  Extension=.otf,
  UprightFont=cmunss,
  ItalicFont=cmunsi,
  BoldFont=cmunsx,
  BoldItalicFont=cmunbi,
]}

\MyRomanFont{\setmainfont}
\MyRomanFont{\setromanfont}
\MyRomanFont{\newfontfamily{\cyrillicfont}}
\MyMonoFont{\setmonofont}
\MyMonoFont{\newfontfamily{\cyrillicfonttt}}
\MySerifFont{\setsansfont}
\MySerifFont{\newfontfamily{\cyrillicfontsf}}

